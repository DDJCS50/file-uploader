generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EndUser {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  username   String   @unique
  firstName    String
  lastName    String
  password String 
  folders Folders[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String     // MediumText may be needed for MySql
  expiresAt   DateTime
}

model Folders {
  id   Int   @id @default(autoincrement())
  name String @unique
  endUser EndUser @relation(fields: [endUserId], references: [id])
  endUserId Int
  files Files[]
}

model Files {
  id   Int   @id @default(autoincrement())
  name String @unique
  folder Folders @relation(fields: [folderId], references: [id])
  folderId Int
  uploadedAt DateTime @default(now())
  size Int
  mimetype String
  buffer Bytes
}